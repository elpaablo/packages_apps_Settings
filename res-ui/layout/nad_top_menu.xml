<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidprv="http://schemas.android.com/apk/prv/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="?android:attr/listPreferredItemPaddingEnd"
    android:layout_marginEnd="?android:attr/listPreferredItemPaddingEnd"
    android:layout_marginTop="72dp"
    android:layout_marginBottom="4dp"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/nad_round_background_top"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="2dp"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/alpha_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:background="@drawable/nad_top_menu_avatar_background">

            <androidx.preference.internal.PreferenceImageView
                android:id="@+id/avatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent"
                android:paddingHorizontal="2dp"
                android:paddingVertical="2dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_settings_alpha" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/alpha_settings_title"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textColor="?androidprv:attr/materialColorOnSurface" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:singleLine="true"
                android:text="@string/alpha_settings_summary"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?androidprv:attr/materialColorOnSurfaceVariant" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/nad_top_menu_search_background"
            android:gravity="center"
            android:orientation="vertical">

            <Toolbar
                android:id="@+id/search_action_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:contentInsetStartWithNavigation="@dimen/search_bar_content_inset"
                android:navigationIcon="@drawable/ic_settings_search"
                android:nextFocusForward="@+id/wifi"
                android:paddingEnd="@dimen/search_bar_padding_end"
                android:touchscreenBlocksFocus="false" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@id/wifi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/nad_round_background_bottom_left"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:padding="2dp">

                <androidx.preference.internal.PreferenceImageView
                    android:id="@+id/wifi_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="4dp"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="2dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_settings_wireless_filled" />

                <TextView
                    android:id="@+id/wifi_title"
                    style="@style/PreferenceSummaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/wifi_icon"
                    android:ellipsize="marquee"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:text="@string/network_dashboard_title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?androidprv:attr/materialColorOnSurface" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/battery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:background="@drawable/nad_round_background_bottom_right"
            android:gravity="center"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:padding="2dp">

                <androidx.preference.internal.PreferenceImageView
                    android:id="@+id/battery_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="4dp"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="2dp"
                    android:rotation="90"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_settings_battery_filled" />

                <TextView
                    android:id="@+id/battery_title"
                    style="@style/PreferenceSummaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/battery_icon"
                    android:ellipsize="marquee"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:text="@string/network_dashboard_title"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?androidprv:attr/materialColorOnSurface" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
